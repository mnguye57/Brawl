package brawl.model.enums;

/**
 * The Color class represents the color of a card.
 * 
 * @author FBRD-Paul Doyle
 * @version 1.0
 */
public enum Color
{
    /** enumeration to represent a card color of red*/
    RED,
    /** enumeration to represent a card color of green*/
    GREEN,
    /** enumeration to represent a card color of blue*/
    BLUE,
    /** enumeration to represent a card color of colorless*/
    COLORLESS;

    /**
     * Creates a String representation, of length 1, of a card's color
     * @return a String representing the color of a card
     */
    @Override
    public String toString()
    {
        return name().substring(0, 1);
    }
}
